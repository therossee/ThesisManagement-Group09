{
  "name": "back-end",
  "version": "1.0.0",
  "description": "The back end service for the Thesis Management System",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage --colors",
    "test:unit": "npx jest --coverage --coverageDirectory=coverage/coverage_unit --colors --runInBand .*.unit.test.js",
    "test:integration": "npx jest --coverage --coverageDirectory=coverage/coverage_integration  --runInBand --colors .*.integration.test.js",
    "start": "node index",
    "dev": "nodemon index"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "1.17.3",
    "formidable": "^3.5.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-saml": "^3.2.4",
    "path": "^0.12.7",
    "supertest": "^6.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "reporters": [
      "default",
      ["jest-html-reporters", {
        "enableMergeData": true,
        "dataMergeLevel": 1,
        "openReport": true,
        "publicPath": "./reports",
        "filename": "index.html"
      }]
    ]
  }
}
